<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID" version="2.4">
  <filter>
    <filter-name>character</filter-name>
    <filter-class> com.ybcx.art.utils.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>character</filter-name>
    <servlet-name>WebEntrance</servlet-name>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>filepath</param-name>
    <param-value>
			/WEB-INF/uploadFile
	</param-value>
  </context-param>
  <context-param>
    <param-name>temppath</param-name>
    <param-value>
			/WEB-INF/temp
	</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			/WEB-INF/app-config.xml
	 </param-value>
  </context-param>
  <listener>
    <listener-class>
			com.ybcx.art.facade.ServerListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <servlet>
    <description>统一外部接口</description>
    <display-name>WebEntrance</display-name>
    <servlet-name>WebEntrance</servlet-name>
    <servlet-class>com.ybcx.art.facade.WebEntrance</servlet-class>
    <init-param>
      <param-name>targetBean</param-name>
      <param-value>appStarter</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebEntrance</servlet-name>
    <url-pattern>/artapi</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>素材上传并保存</description>
    <display-name>FileUploader</display-name>
    <servlet-name>FileUploader</servlet-name>
    <servlet-class>com.ybcx.art.tools.FileUploader</servlet-class>
    <init-param>
      <param-name>filepath</param-name>
      <param-value>/WEB-INF/uploadFile</param-value>
    </init-param>
    <init-param>
      <param-name>temppath</param-name>
      <param-value>/WEB-INF/temp</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUploader</servlet-name>
    <url-pattern>/fileupload</url-pattern>
  </servlet-mapping>
</web-app>